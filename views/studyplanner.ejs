<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Study Planner</title>
  <link rel="stylesheet" href="css/custom.css" />
  <link rel="stylesheet" href="css/ani.css" />
  <script src="js/bootstrap.min.js"></script>
</head>

<body>
  <%- include('./navbar') %>
    <div class="container-fluid p-3">
      <div class="row">
        <div class="container-fluid col-4 p-5">
          <form action="/studyplanner" method="POST">
            <div class="form-group">
              <h3 for="source">
                <b>Syllabus:</b>
              </h3>
              <textarea class="form-control input-style shadow" style="height: 45vh;" id="source" name="source"
                rows="5"></textarea>
              <h3 for="dates"><b>Time Period</b></h3>
              <textarea class="form-control input-style shadow" style="height: 15vh;" rows="5" id="dates"
                name="dates"></textarea>
            </div>
            <button class="btn btn-primary m-3" type="submit" id="sendButton">
              Submit
            </button>
          </form>
        </div>
        <div class="container-fluid col p-5">
          <div class="form-group">
            <h3><b>Your Planner:</b></h3>
            <textarea class="form-control input-style shadow" style="height: 68vh;" id="planner" name="planner" rows="5"
              readonly><%= response  %></textarea>
            <button class="btn m-3" id="copy" onclick="planner_copy()">
              Copy
            </button>
          </div>
        </div>
      </div>
      <%- include('./footer') %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>
  <script src="js/index.js"></script>

</body>
</html>